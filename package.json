{
  "name": "fidus",
  "version": "0.1.0",
  "private": true,
  "description": "Privacy-first AI assistant with domain-driven architecture",
  "repository": {
    "type": "git",
    "url": "https://github.com/y-core-engineering/fidus.git"
  },
  "author": "Y-Core Consulting GmbH",
  "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://github.com/y-core-engineering/fidus/issues"
  },
  "homepage": "https://github.com/y-core-engineering/fidus#readme",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "typecheck": "turbo run typecheck",
    "prepare": "husky || true",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "turbo": "^1.13.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
