# Fidus Web Application Environment Configuration
# Copy this file to .env.local for local development

# =============================================================================
# API Configuration
# =============================================================================

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# WebSocket URL
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# API timeout (milliseconds)
NEXT_PUBLIC_API_TIMEOUT=30000

# =============================================================================
# Authentication
# =============================================================================

# OAuth Client IDs (for frontend OAuth flows)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
NEXT_PUBLIC_MICROSOFT_CLIENT_ID=your-microsoft-client-id
NEXT_PUBLIC_APPLE_CLIENT_ID=your-apple-client-id

# =============================================================================
# Feature Flags
# =============================================================================

# Enable specific features
NEXT_PUBLIC_ENABLE_CALENDAR=true
NEXT_PUBLIC_ENABLE_FINANCE=true
NEXT_PUBLIC_ENABLE_TRAVEL=true
NEXT_PUBLIC_ENABLE_COMMUNICATION=true
NEXT_PUBLIC_ENABLE_HEALTH=true
NEXT_PUBLIC_ENABLE_HOME=true
NEXT_PUBLIC_ENABLE_SHOPPING=true
NEXT_PUBLIC_ENABLE_LEARNING=true

# Enable experimental features
NEXT_PUBLIC_ENABLE_VOICE_INPUT=false
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# =============================================================================
# Analytics & Monitoring
# =============================================================================

# Analytics (disabled in Community Edition)
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Sentry (Error tracking)
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development

# =============================================================================
# UI Configuration
# =============================================================================

# Default language
NEXT_PUBLIC_DEFAULT_LANGUAGE=en

# Default theme
NEXT_PUBLIC_DEFAULT_THEME=light

# Date/Time format
NEXT_PUBLIC_DATE_FORMAT=YYYY-MM-DD
NEXT_PUBLIC_TIME_FORMAT=HH:mm

# Currency
NEXT_PUBLIC_DEFAULT_CURRENCY=EUR

# =============================================================================
# Development Tools
# =============================================================================

# Enable React DevTools
NEXT_PUBLIC_ENABLE_DEVTOOLS=true

# Enable debug mode
NEXT_PUBLIC_DEBUG=false

# Show development indicators
NEXT_PUBLIC_SHOW_DEV_INDICATORS=true
